{
  "tasks": {
    "start": "deno run --env-file=.env --allow-net --allow-env --allow-read --allow-write --no-prompt src/discord-bot.ts",
    "dryrun": "ENV=dryrun PORT=8081 deno run --env-file=.env --allow-read=./chains.json --allow-net=api.monerium.app,discord.com,gateway.discord.gg,gateway-us-east1-a.discord.gg,gateway-us-east1-b.discord.gg,gateway-us-east1-c.discord.gg,gateway-us-east1-d.discord.gg,gateway-us-east1-e.discord.gg,0.0.0.0 --no-prompt --allow-env  src/main.ts",
    "verify-channel": "deno run --env-file=.env --allow-read=./cache --allow-write=./cache --allow-write=./missing-txs.json --allow-net --no-prompt --allow-env  src/commands/verify-channel.ts",
    "cron": "deno run --env-file=.env --allow-read=./cache --allow-read=./data --allow-write=./cache --allow-net --no-prompt --allow-env  src/commands/cron.ts",
    "reminder": "deno run --env-file=.env --allow-read=./cache --allow-write=./cache --allow-net --no-prompt --allow-env  src/commands/reminder.ts",
    "process-missing-txs": "deno run --env-file=.env --allow-read=./missing-txs.json --allow-write=./missing-txs.json --allow-net --no-prompt --allow-env  src/commands/process-missing-txs.ts",
    "hh:node": "cd hardhat && npx hardhat node",
    "hh:deploy": "deno run --allow-run --cwd=hardhat npm:hardhat run scripts/deploy.ts --network localhost",
    "test:mint": "deno test --allow-run --allow-net --allow-env --env-file=.env.test --allow-read --allow-write tests/lib.blockchain.mint.test.ts",
    "test:safe": "deno test --allow-net --allow-env --env-file=.env.test --allow-read --allow-write tests/lib.safe.test.ts",
    "test:cron": "deno test --allow-read --allow-write --allow-net --allow-env --env-file=.env.test tests/cron.test.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@wevm/viem": "jsr:@wevm/viem@^2.37.4",
    "discord.js": "npm:discord.js@^14.22.1",
    "@std/expect/expect": "jsr:@std/expect@1/expect",
    "@std/testing/bdd": "jsr:@std/testing@1/bdd",
    "ethers": "npm:ethers@^6.13.5",
    "express": "npm:express@^5.1.0",
    "nostr-tools": "npm:nostr-tools@^2.11.0",
    "@safe-global/api-kit": "npm:@safe-global/api-kit@^4.0.0",
    "@safe-global/protocol-kit": "npm:@safe-global/protocol-kit@^6.1.1",
    "@safe-global/types-kit": "npm:@safe-global/types-kit@3.0.0"
  }
}
